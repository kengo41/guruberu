<div class="bg-base-200 p-4 m-5 rounded-xl shadow-lg">
  <div class="flex items-center">
    <%= image_tag shop.image || 'logo.png', class: 'w-48 h-48 object-cover rounded-3xl' %>
    <div class="ml-4">
      <%= link_to shop.name, shop_path(shop), class: "text-xl font-semibold hover:text-yellow-500"%>
      <p class="text-sm md:text-base text-gray-600"><%= shop.address %></p>
      <p class="text-sm md:text-base text-gray-600"><%= shop.phone_number %></p>
      <a href="https://www.google.com/maps/search/?api=1&query=<%= shop.name %>&query_place_id=<%= shop.place_id %>" target="_blank" rel="noopener noreferrer" class="inline-block mt-2 px-4 py-2 text-xs md:text-sm font-semibold text-white bg-blue-500 rounded-full hover:bg-blue-600">
        <i class="fas fa-location-dot mr-2"></i>
        GoogleMap
      </a>
    </div>
  </div>
</div>
