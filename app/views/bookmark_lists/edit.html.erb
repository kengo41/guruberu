<%= turbo_frame_tag @bookmark_list do %>
  <%= form_with model: @bookmark_list do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="flex justify-between">
      <%= f.text_field :name, class: 'text-sm md:text-2xl input input-warning border-gray-800' %>
      <div class="items-center">
        <%= f.submit class: 'btn bg-blue-500 hover:bg-blue-600 text-white mr-2' %>
        <%= link_to t('.cancel'), @bookmark_list, class: 'btn bg-gray-400 hover:bg-gray-500 text-white' %>
      </div>
    </div>
  <% end %>
<% end %>
