<div class="min-h-screen flex justify-center items-center">
  <div class="flex flex-col items-center">
    <div class="text-2xl font-semibold mb-4">
      <%= t('.password_reset') %>
    </div>
    <div class="bg-white p-8 rounded-lg shadow-md">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="mb-4">
          <%= f.label :email, class: "block font-semibold text-gray-700" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border border-gray-300 rounded p-2" %>
        </div>

        <div class="text-center mb-8">
          <%= f.submit t('.sent'), class: "bg-orange-500 text-white px-4 py-2 rounded-full hover:bg-orange-600 transition duration-300" %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
  </div>
</div>