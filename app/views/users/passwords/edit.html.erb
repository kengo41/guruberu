<div class="min-h-screen flex justify-center items-center">
  <div class="flex flex-col items-center">
    <div class="text-2xl font-semibold mb-4">
      <%= t('.change_your_password') %>
    </div>
    <div class="bg-white p-8 rounded-lg shadow-md">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="mb-4">
          <%= f.label :password, t('.new_password'), class: "block font-semibold text-gray-700" %>
          <% if @minimum_password_length %>
            <em class="text-gray-600 text-sm"><%= t('users.shared.minimum_password_length', count: @minimum_password_length) %></em>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full border border-gray-300 rounded p-2" %>
        </div>

        <div class="mb-4">
          <%= f.label :password_confirmation, class: "block font-semibold text-gray-700" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border border-gray-300 rounded p-2" %>
        </div>

        <div class="text-center mb-8">
          <%= f.submit t('.change_my_password'), class: "bg-orange-500 text-white px-4 py-2 rounded-full hover:bg-orange-600 transition duration-300" %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
