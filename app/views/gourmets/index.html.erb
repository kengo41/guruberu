<div class="grid place-items-center mt-10">
  <h1 class="text-2xl font-semibold mb-10">全国ご当地グルメ一覧</h1>
  <%= form_tag gourmets_path, method: :get, remote: true, class: "mb-4" do %>
    <%= select_tag :prefecture_id, options_from_collection_for_select(Prefecture.all, 'id', 'name'), prompt: '全て', class: "border border-gray-300 p-2 rounded-md" %>
    <%= submit_tag '絞り込み', class: "bg-blue-500 text-white p-2 rounded-md ml-2 hover:bg-blue-700 hover:opacity-75" %>
  <% end %>
  <div id="gourmet-list">
    <%= render 'gourmets/gourmet', gourmets: @gourmets %>
  </div>
</div>
