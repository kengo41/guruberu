<% gourmets.group_by { |gourmet| gourmet.prefecture.name }.each do |prefecture, gourmet_group| %>
  <div class="py-6 px-4">
    <h2 class="text-lg font-semibold mb-4"><i class="fa-solid fa-utensils mr-2 text-orange-500"></i><%= prefecture %></h2>
    <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
      <% gourmet_group.each do |gourmet| %>
        <div class="bg-white rounded-md overflow-hidden shadow-lg">
          <%= image_tag gourmet.image.url, class: "w-full h-40 object-cover" %>
          <div class="p-4">
            <h3 class="text-xl font-semibold mb-2"><%= link_to gourmet.name, gourmet_path(gourmet), class: 'text-xl font-semibold hover:text-yellow-500' %></h3>
            <p class="text-gray-600 text-sm"><%= truncate(gourmet.description, length: 40, omission: '...') %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
