<div class="container mx-auto mt-10">
  <div class="flex flex-col md:flex-row">
    <div class="md:w-1/2">
      <%= image_tag @gourmet.image.url, class: "w-full h-auto object-cover rounded-md shadow-lg" %>
    </div>
    <div class="md:w-1/2 mt-6 md:mt-0 md:ml-6">
      <h1 class="text-3xl font-semibold mb-4"><%= @gourmet.name %></h1>
      <p class="text-gray-600 text-lg mb-4"><%= @gourmet.description %></p>
      <%= link_to '戻る', 'javascript:history.back()', class: "text-blue-500 hover:underline" %>
    </div>
  </div>

  <div class="mt-10">
    <h2 class="text-2xl font-semibold mb-4">おすすめのお店</h2>
    <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 mb-10">
      <% @shops.each do |shop| %>
        <div class="bg-white rounded-md overflow-hidden shadow-lg">
          <%= image_tag shop.image, class: 'w-full h-40 object-cover' %>
          <div class="p-4">
            <h3 class="text-xl font-semibold mb-2"><%= link_to shop.name, shop_path(shop), class: 'text-xl font-semibold hover:text-yellow-500' %></h3>
            <p class="text-gray-600 text-sm"><%= shop.address %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="mt-10">
    <h2 class="text-2xl font-semibold mb-4"><%= @gourmet.prefecture.name %>のグルメ一覧</h2>
    <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 mb-10">
      <% @gourmets.each do |gourmet| %>
        <div class="bg-white rounded-md overflow-hidden shadow-lg">
          <%= image_tag gourmet.image.url, class: 'w-full h-40 object-cover' %>
          <div class="p-4">
            <h3 class="text-xl font-semibold mb-2"><%= link_to gourmet.name, gourmet_path(gourmet), class: 'text-xl font-semibold hover:text-yellow-500' %></h3>
            <p class="text-gray-600 text-sm"><%= gourmet.description %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
