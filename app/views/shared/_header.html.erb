<div class="navbar bg-orange-500 flex justify-between items-center">
  <%= link_to image_tag('headerlogo.png', class: 'h-10 w-40'), root_path %>
  <div class="drawer-end flex items-center">
    <%= link_to t('defaults.search_shop'), home_path, class: 'pr-5 text-white hover:underline' %>
    <%= link_to t('defaults.search_gourmet'), gourmets_path, class: 'pr-5 text-white hover:underline' %>
    <input id="my-drawer-4" type="checkbox" class="drawer-toggle"/>
    <label for="my-drawer-4" class="drawer-button">
      <i class="fas fa-bars mr-5 h-5 w-5"></i>
    </label>
    <div class="drawer-side z-10">
      <label for="my-drawer-4" class="drawer-overlay"></label>
      <ul class="menu p-4 w-80 h-full bg-yellow-50 text-base-content">
        <% if current_user %>
        <%= link_to t('defaults.my_page'), my_page_path, class: 'pl-1 mt-10 text-xs md:text-sm border-b border-gray-500 pb-2 hover:border-b hover:border-yellow-500 hover:text-yellow-500' %>
          <li class='pl-1 mt-10 text-xs md:text-sm border-b border-gray-500 pb-2'><%= t('defaults.bookmark_list') %></li>
          <% @bookmark_lists.each do |list| %>
            <%= link_to list.name, bookmark_list_path(list), class: 'pl-7 mt-5 text-xs md:text-sm border-b border-gray-300 pb-2 hover:border-b hover:border-yellow-500 hover:text-yellow-500' %>
          <% end %>
        <% end %>
        <% if user_signed_in? %>
          <%= link_to t('defaults.bookmark_ranking'), bookmark_ranking_shops_path, class: 'pl-1 mt-10 text-xs md:text-sm border-b border-gray-500 pb-2 hover:border-b hover:border-yellow-500 hover:text-yellow-500' %></li>
          <%= link_to t('defaults.sign_out'), destroy_user_session_path, class: 'pl-1 mt-10 text-xs md:text-sm border-b border-gray-500 pb-2 hover:border-b hover:border-yellow-500 hover:text-yellow-500' %>
        <% else %>
          <%= link_to t('defaults.sign_in'), new_user_session_path, class: 'pl-1 mt-10 text-xs md:text-sm border-b border-gray-500 pb-2 hover:border-b hover:border-yellow-500 hover:text-yellow-500' %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
