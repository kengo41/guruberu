<header class="bg-orange-500 text-white body-font">
  <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
    <%= link_to image_tag('headerlogo.png', class: 'h-10 w-40'), root_path %>
    <nav class="md:ml-auto flex flex-wrap items-center text-base justify-center">
      <div class="flex space-x-4">
        <%= link_to t('defaults.search_shop'), home_path, class: 'hover:text-orange-300' %></li>
        <%= link_to t('defaults.search_gourmet'), '#', class: 'hover:text-orange-300' %></li>
        <% if user_signed_in? %>
          <%= link_to t('defaults.my_page'), my_page_path, class: 'hover:text-orange-300' %></li>
          <%= link_to t('defaults.sign_out'), destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'hover:text-orange-300' %></li>
        <% else %>
          <%= link_to t('defaults.sign_in'), new_user_session_path, class: 'hover:text-orange-300' %></li>
        <% end %>
      </div>
    </nav>
  </div>
</header>